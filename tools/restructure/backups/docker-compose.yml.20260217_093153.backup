version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    container_name: muejam-postgres
    environment:
      POSTGRES_DB: muejam
      POSTGRES_USER: muejam_user
      POSTGRES_PASSWORD: muejam_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U muejam_user -d muejam"]
      interval: 10s
      timeout: 5s
      retries: 5

  valkey:
    image: valkey/valkey:7-alpine
    container_name: muejam-valkey
    ports:
      - "6379:6379"
    volumes:
      - valkey_data:/data
    healthcheck:
      test: ["CMD", "valkey-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: ./apps/backend
      dockerfile: Dockerfile
    container_name: muejam-backend
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - ./apps/backend:/app
    ports:
      - "8000:8000"
    env_file:
      - ./apps/backend/.env
    depends_on:
      postgres:
        condition: service_healthy
      valkey:
        condition: service_healthy

  celery-worker:
    build:
      context: ./apps/backend
      dockerfile: Dockerfile
    container_name: muejam-celery-worker
    command: celery -A config worker --loglevel=info
    volumes:
      - ./apps/backend:/app
    env_file:
      - ./apps/backend/.env
    depends_on:
      - postgres
      - valkey
      - backend

  celery-beat:
    build:
      context: ./apps/backend
      dockerfile: Dockerfile
    container_name: muejam-celery-beat
    command: celery -A config beat --loglevel=info
    volumes:
      - ./apps/backend:/app
    env_file:
      - ./apps/backend/.env
    depends_on:
      - postgres
      - valkey
      - backend

  frontend:
    build:
      context: ./apps/frontend
      dockerfile: Dockerfile
    container_name: muejam-frontend
    command: npm run dev
    volumes:
      - ./apps/frontend:/app
      - /app/node_modules
    ports:
      - "3000:3000"
    env_file:
      - ./apps/frontend/.env.local
    depends_on:
      - backend

volumes:
  postgres_data:
  valkey_data:
