# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

aws_region = "us-east-1"
environment = "production"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# SSL Certificate
# Create certificate in AWS Certificate Manager first
ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id"

# Application Configuration
app_ami_id = "ami-0c55b159cbfafe1f0"  # Update with your AMI
instance_type = "t3.medium"
ec2_key_name = "muejam-production-key"

# Auto Scaling Configuration
asg_min_size = 2
asg_max_size = 10
asg_desired_capacity = 2

# RDS Database Configuration
db_name = "muejam"
db_master_username = "muejam_admin"
db_master_password = "CHANGE_ME_SECURE_PASSWORD"  # Use a secure password!
db_postgres_version = "15.4"

# Database Instance Configuration
db_instance_class = "db.t3.medium"
db_replica_instance_class = "db.t3.medium"
db_allocated_storage = 100
db_max_allocated_storage = 500
db_max_connections = "100"

# Backup Configuration
db_backup_retention_period = 7
db_backup_window = "03:00-04:00"
db_maintenance_window = "sun:04:00-sun:05:00"

# High Availability
db_multi_az = true

# Read Replicas
db_create_read_replicas = true
db_replica_count = 1

# Deletion Protection
db_deletion_protection = true
db_skip_final_snapshot = false

# S3 Storage Configuration
s3_enable_versioning = true
s3_allowed_origins = ["https://muejam.com", "https://www.muejam.com"]
s3_backup_retention_days = 90
s3_bucket_size_alert_threshold = 107374182400  # 100 GB

# ElastiCache Redis Configuration
redis_version = "7.0"
redis_node_type = "cache.t3.medium"
redis_num_cache_nodes = 2
redis_automatic_failover_enabled = true
redis_multi_az_enabled = true
redis_cluster_mode_enabled = false
redis_snapshot_retention_limit = 7
redis_snapshot_window = "03:00-05:00"
redis_maintenance_window = "sun:05:00-sun:07:00"
redis_auth_token_enabled = true
redis_auth_token = "CHANGE_ME_SECURE_TOKEN"  # Use a secure token!
redis_apply_immediately = false
