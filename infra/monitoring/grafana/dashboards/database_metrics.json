{
    "dashboard": {
        "title": "Database Performance Metrics",
        "tags": [
            "database",
            "performance",
            "postgresql"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 1,
        "refresh": "10s",
        "panels": [
            {
                "id": 1,
                "title": "Query Throughput (QPS)",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "rate(db_query_count[1m])",
                        "legendFormat": "Queries per second",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "QPS"
                    },
                    {
                        "format": "short"
                    }
                ],
                "alert": {
                    "name": "High Query Throughput",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    10000
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "executionErrorState": "alerting",
                    "frequency": "60s",
                    "handler": 1,
                    "message": "Database query throughput exceeds 10,000 QPS",
                    "noDataState": "no_data",
                    "notifications": []
                }
            },
            {
                "id": 2,
                "title": "Average Query Latency",
                "type": "graph",
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "db_avg_latency_ms",
                        "legendFormat": "Avg Latency (ms)",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "ms",
                        "label": "Latency"
                    },
                    {
                        "format": "short"
                    }
                ],
                "alert": {
                    "name": "High Query Latency",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    100
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "executionErrorState": "alerting",
                    "frequency": "60s",
                    "handler": 1,
                    "message": "Average query latency exceeds 100ms",
                    "noDataState": "no_data",
                    "notifications": []
                }
            },
            {
                "id": 3,
                "title": "Database Error Rate",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 8,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "db_error_rate_percent",
                        "legendFormat": "Error Rate (%)",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "Error Rate"
                    },
                    {
                        "format": "short"
                    }
                ],
                "alert": {
                    "name": "High Database Error Rate",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    5
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "executionErrorState": "alerting",
                    "frequency": "60s",
                    "handler": 1,
                    "message": "Database error rate exceeds 5%",
                    "noDataState": "no_data",
                    "notifications": []
                }
            },
            {
                "id": 4,
                "title": "Slow Query Count",
                "type": "stat",
                "gridPos": {
                    "x": 12,
                    "y": 8,
                    "w": 6,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "db_query_count{type=\"slow\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value",
                    "graphMode": "area",
                    "justifyMode": "auto",
                    "orientation": "auto",
                    "reduceOptions": {
                        "calcs": [
                            "lastNotNull"
                        ],
                        "fields": "",
                        "values": false
                    }
                },
                "thresholds": {
                    "mode": "absolute",
                    "steps": [
                        {
                            "color": "green",
                            "value": null
                        },
                        {
                            "color": "yellow",
                            "value": 10
                        },
                        {
                            "color": "red",
                            "value": 50
                        }
                    ]
                }
            },
            {
                "id": 5,
                "title": "Total Query Count",
                "type": "stat",
                "gridPos": {
                    "x": 18,
                    "y": 8,
                    "w": 6,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "db_query_count",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value",
                    "graphMode": "area",
                    "justifyMode": "auto",
                    "orientation": "auto",
                    "reduceOptions": {
                        "calcs": [
                            "lastNotNull"
                        ],
                        "fields": "",
                        "values": false
                    }
                }
            },
            {
                "id": 6,
                "title": "Connection Pool Utilization",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 16,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "connection_pool_utilization_percent",
                        "legendFormat": "Pool Utilization (%)",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "Utilization",
                        "max": 100,
                        "min": 0
                    },
                    {
                        "format": "short"
                    }
                ],
                "alert": {
                    "name": "High Connection Pool Utilization",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    80
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "executionErrorState": "alerting",
                    "frequency": "60s",
                    "handler": 1,
                    "message": "Connection pool utilization exceeds 80%",
                    "noDataState": "no_data",
                    "notifications": []
                }
            },
            {
                "id": 7,
                "title": "Replication Lag",
                "type": "graph",
                "gridPos": {
                    "x": 12,
                    "y": 16,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "replication_lag_seconds",
                        "legendFormat": "Replica {{instance}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "s",
                        "label": "Lag (seconds)"
                    },
                    {
                        "format": "short"
                    }
                ],
                "alert": {
                    "name": "High Replication Lag",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    5
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "executionErrorState": "alerting",
                    "frequency": "60s",
                    "handler": 1,
                    "message": "Replication lag exceeds 5 seconds",
                    "noDataState": "no_data",
                    "notifications": []
                }
            }
        ]
    }
}